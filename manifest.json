{
  "manifest_version": 2,
  "name": "Pikabu Informer",
  "version": "1",
  "description":"Вывод дополнительной информации о пользователе",
  
  "icons": { "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png" },
  "content_scripts": [
    {
      "matches": ["http://*.pikabu.ru/*"],
      "js": ["jquery-1.4.2.min.js","pinformer.js"]
    }
  ],
  "permissions": [
    "tabs", "activeTab", "http://*.pikabu.ru/*"
  ],

  "browser_action": {
    "default_icon": "icon.png"
  }
}